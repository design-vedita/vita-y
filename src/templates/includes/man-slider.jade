                     img(src="../img/caps-small-blue.png").blue-capsule.js-blue
                     img(src="../img/caps-small-blue.png").blue-capsule.js-blue
                     img(src="../img/caps-small-blue.png").blue-capsule.js-blue
                     img(src="../img/caps-small-blue.png").blue-capsule.js-blue
                     img(src="../img/caps-small-blue.png").blue-capsule.js-blue
                  .counter.counter-blue.js-animate-capsule
                     span.js-count-blue   0
                     p  capsule
                  img(src="../img/bottle-left.png").bottle.left.js-bottle
